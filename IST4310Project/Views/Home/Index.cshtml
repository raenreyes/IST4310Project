@model IST4310Project.Models.Login
@{
    ViewData["Title"] = "LogIn Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to our Student Registration System</h1>
</div>
<br />
<br />
<br />

<div style="text-align: center; border-style: ridge" >
    <br />
    <br />
    @using(Html.BeginForm("StudentHome", "Home", FormMethod.Post)) {
        <label>UserName:</label>
        @Html.TextBoxFor(m => m.UserName)
        <br />
        <div class="p-style">
            <label >Password:</label>
            @Html.PasswordFor(m => m.Password)

        </div>
        <br />
        <br />
        <input type="submit" value="Log In" />
    }
    <span style="color: red">@Model.AuthenticationError</span> <br />
    <a href="#">New User </a> <span class="s-style" >|</span> <a href="#">Forgot Password? </a>
    <br />
</div>